<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="DammitBot" type="DammitBot.Configuration.BotConfigurationSection, DammitBot.Core"/>
    <section name="TeamCity" type="DammitBot.Configuration.TeamCityConfigurationSection, DammitBot.Plugins.TeamCity"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <DammitBot server="irc.rizon.net" nick="DammitBot" user="DammitBot" channel="#mmsi" goesBy="(?:new|dammit) bot" />

  <TeamCity host="castlebravo:8111" login="jduncan" password="password#1" />

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
    </root>

    <logger name="Quartz">
      <level value="ERROR" />
    </logger>

    <logger name="NHibernate">
      <level value="ERROR" />
    </logger>

    <logger name="NHibernate.SQL">
      <level value="ERROR" />
    </logger>
  </log4net>
</configuration>