{
    "DammitBot": {
        "goesBy": "(?:dammit )?bot"
    },

    "Dapper": {
        "connection": "..\\..\\db\\dev.db"
    },

    "Irc": {
        "server": "irc-server",
        "nick": "DammitBot",
        "user": "DammitBot",
        "channels": "#DammitBot"
    },

    "log4net": {
        "appender": {
            "name": "ConsoleAppender",
            "type": "log4net.Appender.ConsoleAppender",
            "layout": {
                "type": "log4net.Layout.PatternLayout",
                "conversionPattern": "%date [%thread] %-5level %logger - %message%newline"
            }
        },

        "root": {
            "level": "INFO",
            "appender-ref": "ConsoleAppender"
        },

        "logger": {
            "name": "Quartz",
            "level": "ERROR"
        }
    }
}